#:kivy 1.0.0
#:import Image kivy.uix.image
#:import Factory kivy.factory.Factory


<AnimalsScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            padding: 10
            spacing: 10
            size_hint_y: 1
            orientation: 'horizontal'
            id: bl_title_bar
            BeepButton:
                size_hint_x: 1
                fit_mode: "scale-down"
                id: btn_shutdown
                on_release: app.try_shutdown()
                CenteredImage:
                    source: 'resources/images/power.png'
            Label:
                id: lbl_title
                size_hint_x: 5
                font_size: "40sp"
                text: "JG Uster Hard"
            BeepButton:
                size_hint_x: 1
                id: btn_date
                color: 0, 0, 0, 1
                on_release: app.set_date_popup()
                CenteredImage:
                    source: 'resources/images/ic_calendar.png'
            BeepButton:
                size_hint_x: 1
                id: btn_weight
                color: 0, 0, 0, 1
                on_release: app.measure_popup()
                CenteredImage:
                    source: 'resources/images/weight-kilogram.png'
            BeepButton:
                size_hint_x: 1
                id: btn_tare
                color: 0, 0, 0, 1
                text: "T"
                font_size: "40sp"
                on_release: app.tare()
            BeepButton:
                size_hint_x: 1
                id: btn_settings
                on_release: app.open_settings()
                CenteredImage:
                    source: 'resources/images/settings.png'
        ScrollView:
            size_hint_y: 6
            do_scroll: False, True
            GridLayout:
                id: grid_animals
                padding: 10,0,10,10
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '160dp'
                cols: 2
                spacing: 10


<CutScreen>:
    game_no: tif_game_no.text
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            id: lay_bar
            padding: 10
            spacing: 10
            size_hint_y: 1
            orientation: 'horizontal'
            BeepButton:
                size_hint_x: 1
                id: btn_settings
                on_release: app.switch_to_main()
                CenteredImage:
                    source: 'resources/images/back_arrow.png'
            Image:
                id: img_title
                size_hint_x: 1
                valign: "right"
            CenterLeftLabel:
                id: lbl_title
                size_hint_x: 5
                font_size: "40sp"
            BeepButton:
                size_hint_x: 1
                id: btn_weight
                color: 0, 0, 0, 1
                on_release: app.measure_popup()
                CenteredImage:
                    source: 'resources/images/weight-kilogram.png'
            BeepButton:
                size_hint_x: 1
                id: btn_tare
                color: 0, 0, 0, 1
                text: "T"
                font_size: "40sp"
                on_release: app.tare()
            ClickableBeepLabel:
                id: tif_game_no
                size_hint_x: 2
                hint_text: "Wild Nr."
                on_press: root.open_game_no_popup()
                valign: "middle"
                multiline: False
                font_size: "30sp"
        ScrollView:
            size_hint_y: 6
            padding: 10,10
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                id: grid_cuts
                padding: 10,0,10,10
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '160dp'
                cols: 3
                spacing: 10 if len(self.children) > 1 else 0


<CenterLeftLabel@Label>:
    halign: 'left'
    text_size:self.size
    valign: 'center'
    font_size: '30sp'

<AnimalButton>:
    orientation: "horizontal"
    text: ""
    source: ""
    size_hint: 1,1
    canvas.before:
        BorderImage:
            border: root.border
            source: root.background_normal if self.state == 'normal' else root.background_down
            pos: self.pos
            size: self.size
    AnimalImage:
        size_hint_x: 2
        id: img_animal
        source: root.source
    CenterLeftLabel:
        id: lbl_title
        size_hint_x: 2
        padding: 10,0
        text: root.text

<BigButton@BeepButton>:
    font_size: '30sp'
    markup: True

<NumericInput>:
    input_type: "number"
    input_filter: "int"

<ClickableBeepLabel>:
    font_size: "30sp"
    color: 0, 0, 0, 1
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos

<CenteredImage@Image>:
    height: self.parent.height * 0.8
    width: self.parent.width * 0.8
    fill_mode: "scale-down"
    y: self.parent.y + self.parent.height/2 - self.height/2
    x: self.parent.x + self.parent.width/2 - self.width/2

<AnimalImage@Image>:
    height: self.parent.height/2
    width: self.parent.width/2
    fill_mode: "scale-down"
    y: self.parent.y + self.parent.height/2 - self.height/2
    x: self.parent.x

<GameNoPopup@Popup>:
    auto_dismiss: False
    title: "Wildnummer Eingeben"
    size_hint: 0.5,0.9
    title_size: "24sp"
    title_align: "center"
    BoxLayout:
        orientation: "vertical"
        TextInput:
            id: tif_pu
            valign: "middle"
            halign: "center"
            multiline: False
            size_hint_y: 1
            padding: [6, 6, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            input_type: "number"
            input_filter: "int"
            font_size: "30sp"
        GridLayout:
            padding: 10,10,10,10
            size_hint_y: 4
            height: self.width/2
            cols: 3
            rows: 4
            spacing: 10
            BeepButton:
                on_release: tif_pu.text += "7"
                font_size: "24sp"
                text: "7"
            BeepButton:
                on_release: tif_pu.text += "8"
                font_size: "24sp"
                text: "8"
            BeepButton:
                on_release: tif_pu.text += "9"
                font_size: "24sp"
                text: "9"
            BeepButton:
                on_release: tif_pu.text += "4"
                font_size: "24sp"
                text: "4"
            BeepButton:
                on_release: tif_pu.text += "5"
                font_size: "24sp"
                text: "5"
            BeepButton:
                on_release: tif_pu.text += "6"
                font_size: "24sp"
                text: "6"
            BeepButton:
                on_release: tif_pu.text += "1"
                font_size: "24sp"
                text: "1"
            BeepButton:
                on_release: tif_pu.text += "2"
                font_size: "24sp"
                text: "2"
            BeepButton:
                on_release: tif_pu.text += "3"
                font_size: "24sp"
                text: "3"
            BeepButton:
                on_release: tif_pu.text = tif_pu.text[0:-1]
                font_size: "24sp"
                text: "⌫"
            BeepButton:
                on_release: tif_pu.text += "0"
                font_size: "24sp"
                text: "0"
            BeepButton:
                id: btn_ok
                on_release: root.finish()
                font_size: "24sp"
                text: "OK"

<ScalePopup>:
    auto_dismiss: True
    title: "Gewicht Eingeben"
    size_hint: 0.5,0.9
    title_size: "24sp"
    title_align: "center"
    BoxLayout:
        orientation: "vertical"
        TextInput:
            id: tif_pu
            valign: "middle"
            halign: "center"
            multiline: False
            size_hint_y: 1
            padding: [6, 6, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            input_type: "number"
            input_filter: "int"
            font_size: "30sp"
        GridLayout:
            padding: 10,10,10,10
            size_hint_y: 4
            height: self.width/2
            cols: 3
            rows: 4
            spacing: 10
            BeepButton:
                on_release: tif_pu.text += "7"
                font_size: "24sp"
                text: "7"
            BeepButton:
                on_release: tif_pu.text += "8"
                font_size: "24sp"
                text: "8"
            BeepButton:
                on_release: tif_pu.text += "9"
                font_size: "24sp"
                text: "9"
            BeepButton:
                on_release: tif_pu.text += "4"
                font_size: "24sp"
                text: "4"
            BeepButton:
                on_release: tif_pu.text += "5"
                font_size: "24sp"
                text: "5"
            BeepButton:
                on_release: tif_pu.text += "6"
                font_size: "24sp"
                text: "6"
            BeepButton:
                on_release: tif_pu.text += "1"
                font_size: "24sp"
                text: "1"
            BeepButton:
                on_release: tif_pu.text += "2"
                font_size: "24sp"
